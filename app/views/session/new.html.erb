<div class="backpanel">
	<a href="/">Home</a>
</div>


<div class="container">

<%= bootstrap_form_tag url: '/login' do |f| %>


<div class="col-sm-8">
	<div class="backpanel">
		<% if flash[:notice] %>
			<div class="alert alert-danger"><%= flash[:notice] %></div>
		<% end %>
		<div class="row">
			<div class="col-sm-6">
				<%= f.email_field :email %>
			</div>
			<div class="col-sm-6">
				<%= f.password_field :password %>
			</div>
		</div>
		<%= f.submit 'Login' %>
	</div>
</div>


<% end %>






</div>