<div class="well well-sm"><h3>Update Your Info</h3></div>



<%= bootstrap_form_for @current_user, url: '/preferences/edituser' do |f| %>

<div class="col-sm-8">


	<div class="well">
		<% if flash[:userupdate] %>
		<div class="alert alert-success alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= flash[:userupdate] %>
		</div>
		<% end %>
		<div class="row">
			<div class="col-sm-6">
				<%= f.text_field :firstname %>
			</div>
			<div class="col-sm-6">
				<%= f.text_field :lastname %>
			</div>
		</div>
		<%= f.email_field :email %>
		<%= f.password_field :password, label: "Old Password" %>
		<%= f.password_field :new_password %>
		<%= f.password_field :new_password_confirmation %>
		<%= f.submit 'Update your info' %>
	</div>
</div>
<% end %>