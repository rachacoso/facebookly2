
<div class="well well-sm">
	<%= @current_user ? "Hello #{@current_user.firstname}! <a href=\"/logout\">Logout</a>".html_safe : "<a href=\"/signup\">Join Facebookly</a> or <a href=\"/login\">Login</a>".html_safe %>
</div>

<% if @current_user %>
<div class="container">
<div class="well well-sm">
<%= Time.now.strftime("%I:%M:%S %Z") %>
</div>
</div>

<div class="container">
<h3>Here are your future friends!!</h3>
<% @allpeople.each do |person| %>
	<% next if person.id == @current_user.id %>
	
	<%= person.firstname %> <%= person.lastname %> <a href='/friend/<%= person.id %>'> Let's be friends </a>
	<br>

<% end %>
</div>

<% end %>